.container-fluid
  .row
    .col-md-12
      .panel.panel-login
        .panel-heading
          .row
            .col-xs-12
              %a#register-form-link{:href => "#"} Create Category
          %hr/
        .panel-body
          .row
            .col-md-12
              #register-form
                = simple_form_for(@category, remote: request.xhr?, html: { data: { modal: true } }) do |f|
                  = f.error_notification
                  .form-inputs
                    = f.input :name, label: 'Category name'
                    = f.input :description, label: 'A Brief Description about Category'
                  .form-group
                    .row
                      .col-sm-6.col-sm-offset-3
                        %input#register-submit.form-control.btn.btn-register{:name => "register-submit", :tabindex => "4", :type => "submit", :value => "create cateogory"}/
