%h4
  %b
    - if @comments.present?
      = @comments.count
      COMMENTS
.commnets-area.text-left
  - @comments.each do |comment|
    .comment
      .post-info
        .left-area
          %a.avatar{:href => "#"}
            = image_tag(@article.image_url(:thumb).to_s)
        .middle-area
          %b
            = comment.user.user_name
          %h6.date
            on
            = comment.created_at.strftime('%b %d, %Y at %I:%M %p')
        .right-area
          %h5.reply-btn
            %a{:href => "#"}
              %b
                REPLY
      %p
        = comment.description
%a.more-comment-btn{:href => "#"}
  %b
    VIEW MORE COMMENTS
