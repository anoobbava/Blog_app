= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .container
    .row
      .col-md-4.col-md-offset-4
        .login-panel.panel.panel-default
          .panel-heading
            %h3.panel-title Please Sign In
          .panel-body
            %form{:role => "form"}
              %fieldset
                .form-group
                  = f.email_field :login, autofocus: true, required: true, class: 'form-control', placeholder: "User name or E-mail"
                .form-group
                  = f.password_field :password, autocomplete: "off",required: true, class: 'form-control' , placeholder: "Password"
                - if devise_mapping.rememberable?
                  .checkbox
                    %label
                      = f.check_box :remember_me
                      = f.label :remember_me
                = f.submit "Log in", class: 'btn btn-lg btn-success btn-block'
.container
  .row
    .col-md-4.col-md-offset-4
      = render "devise/shared/links"
